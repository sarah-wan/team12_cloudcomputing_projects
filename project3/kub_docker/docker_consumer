FROM ubuntu:latest

RUN apt-get -y update && apt-get install -y python3 
RUN apt-get install -y python3-pip
RUN python3 -m pip install --upgrade pip
RUN python3 -m install --upgrade kafka-python
RUN python3 -m install --upgrade couchdb 
RUN python3 -m install --upgrade pymongo

COPY consumer.py /

#CMD /bin/bash